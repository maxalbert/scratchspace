{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "lazygit@latest",
    "python@latest",
    "uv@latest"
  ],
  "shell": {
    "init_hook": [
      "source $VENV_DIR/bin/activate",
      "export UV_PYTHON=$VENV_DIR/bin/python",
      "alias db='devbox'",
      "alias lg='lazygit'",
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
